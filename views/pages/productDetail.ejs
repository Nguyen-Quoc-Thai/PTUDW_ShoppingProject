<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head'); %>
	</head>
	<body>
		<%- include('../partials/header', {query:''}); %>

		<!-- Breadcrumb Start -->
		<div class="breadcrumb-wrap">
			<div class="container-fluid">
				<ul class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
					<li class="breadcrumb-item"><a href="/">Sản phẩm</a></li>
					<li class="breadcrumb-item active">Thông tin chi tiết</li>
				</ul>
			</div>
		</div>
		<!-- Breadcrumb End -->

		<!-- Product Detail Start -->
		<div class="product-detail">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-9">
						<% if (data) { %>
						<div class="product-detail-top">
							<div class="row align-items-center">
								<div class="col-md-5">
									<div class="product-slider-single normal-slider">
										<% data.images.forEach(src => { %>
										<img src="<%= src %>" alt="Product Image" />
										<% }) %>
									</div>
									<div class="anchor"></div>
									<div class="product-slider-single-nav normal-slider">
										<% data.images.forEach(src => { %>
										<div class="slider-nav-img">
											<img src="<%= src %>" alt="<%=data.name%>" />
										</div>
										<% }) %>
									</div>
								</div>
								<div class="col-md-7">
									<div class="product-content">
										<div class="title"><h2><%= data.name %></h2></div>
										<div class="ratting">
											<%Array(+data.rating).fill(0).forEach((num, index) => {%>
											<i class="fa fa-star"></i>
											<%})%>
										</div>
										<div class="price">
											<h4>Giá:</h4>
											<p>
												$<%= data.price %><span>$<%= data.oldPrice %></span>
											</p>
										</div>
										<div class="quantity">
											<%if (data.quantity.length){%>
											<h4>Trong kho: <%=data.quantity%></h4>
											<%}%>
											<div class="qty">
												<button class="btn-minus">
													<i class="fa fa-minus"></i>
												</button>
												<input type="text" value="1" />
												<button class="btn-plus">
													<i class="fa fa-plus"></i>
												</button>
											</div>
										</div>
										<div class="p-size">
											<h4>SKU:</h4>
											<div class="btn-group btn-group-sm">
												<button type="button" class="btn">
													<%=data.code%>
												</button>
											</div>
										</div>

										<div class="p-size">
											<h4>Xem:</h4>
											<div class="btn-group btn-group-sm">
												<button type="button" class="btn">
													<%=data.countView%>
												</button>
											</div>
										</div>

										<div class="p-size">
											<h4>Thích:</h4>
											<div class="btn-group btn-group-sm">
												<button type="button" class="btn">
													<%=data.countLike%>
												</button>
											</div>
										</div>

										<div class="action">
											<a
												class="btn add-to-cart"
												href="#"
												value="<%=data.slugName%>"
												><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a
											>
											<a
												class="btn buy-now"
												href="/checkout"
												value="<%=data.slugName%>"
												><i class="fa fa-shopping-bag"></i>Mua ngay</a
											>
										</div>
										<br />
										<hr />
										<div>
											<h4>Khuyến mãi liên quan:</h4>
											<div>
												Nhập mã
												<strong><%=data.promotion.code%></strong>
												giảm thêm 5% tối đa
												<a><%=data.promotion.desc%></a>
												khi thanh toán qua VNPAY-QR.
												<a href="<%=data.promotion.link%>">Xem chi tiết</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="row product-detail-bottom">
							<div class="col-lg-12">
								<ul class="nav nav-pills nav-justified">
									<li class="nav-item">
										<a
											class="nav-link active"
											data-toggle="pill"
											href="#description"
											>Thông số kĩ thuật</a
										>
									</li>
									<li class="nav-item">
										<a class="nav-link" data-toggle="pill" href="#specification"
											>Thông tin mô tả</a
										>
									</li>
									<li class="nav-item">
										<a class="nav-link" data-toggle="pill" href="#reviews"
											>Các bài đánh giá (<%=data.comments.length%>)</a
										>
									</li>
								</ul>

								<div class="tab-content">
									<div id="description" class="container tab-pane active">
										<h4>Thông số kĩ thuật</h4>
										<br />
										<table class="table">
											<tbody>
												<%Object.keys(data.details).slice(0, 5).forEach((field,
												index) => {%>
												<tr>
													<th scope="row"><%=(index + 1)%></th>
													<td><%=field%></td>
													<td class="text-center">
														<%=data.details[field].replace(/^[\s,'"-.\(\)]+|\s+$/gm,'');%>
													</td>
												</tr>
												<%})%>
												<%Object.keys(data.details).slice(5).forEach((field,
												index) => {%>
												<tr class="hidden-row d-none">
													<th scope="row"><%=(index + 6)%></th>
													<td><%=field%></td>
													<td class="text-center">
														<%=data.details[field].replace(/^[\s,'"-.\(\)]+|\s+$/gm,'');%>
													</td>
												</tr>
												<%})%>
											</tbody>
										</table>
										<div
											class="toggle-see-more"
											style="
												padding: 10px;
												user-select: none;
												cursor: pointer;
												text-align: center;
											"
										>
											See more &nbsp;<i class="fas fa-arrow-down"></i>
										</div>
									</div>

									<div id="specification" class="container tab-pane fade">
										<h4>Mô tả sản phẩm</h4>
										<hr />
										<ul>
											<%data.descriptions.slice(0, 2).forEach(field => {%>
											<%if(field.title) {%>
											<div>
												<h5><strong><%=field.title%></strong></h5>
												<%}%> <%if(field.content) {%>
												<p><%=field.content%></p>
												<%}%> <%if(field.img && field.content) {%>
												<p><%=field.content%></p>
												<a href="<%=field.img%>">
													<img
														src="<%=field.img%>"
														alt="<%=field.title%>"
														style="max-width: 100%"
													/>
												</a>
												<%}%>
												<br /><br />
											</div>
											<%})%> <%data.descriptions.slice(2).forEach(field => {%>
											<%if(field.title) {%>
											<div class="hidden-row d-none">
												<h5><strong><%=field.title%></strong></h5>
												<%}%> <%if(field.content) {%>
												<p><%=field.content%></p>
												<%}%> <%if(field.img && field.content) {%>
												<p><%=field.content%></p>
												<a href="<%=field.img%>">
													<img
														src="<%=field.img%>"
														alt="<%=field.title%>"
														style="max-width: 100%"
													/>
												</a>
												<%}%>
												<br /><br />
											</div>
											<%})%>
										</ul>
										<div
											class="toggle-see-more"
											style="
												padding: 10px;
												user-select: none;
												cursor: pointer;
												text-align: center;
											"
										>
											See more &nbsp;<i class="fas fa-arrow-down"></i>
										</div>
									</div>
									<div id="reviews" class="container tab-pane fade">
										<%data.comments.forEach((comment) => {%>
										<div
											class="reviews-submitted"
											user-id="<%=comment.userId%>"
										>
											<div class="reviewer">
												<%=comment.name%>&nbsp;&nbsp;&nbsp;
												<span
													><%=new Intl.DateTimeFormat( ['ban', 'id'], { year:
													"numeric", month: "numeric", day: "numeric", hour:
													"numeric", minute: "numeric", second: "numeric",
													hour12: false, timeZone: "America/Los_Angeles", }
													).format(new Date(comment.date))%></span
												>
											</div>
											<div class="ratting">
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
											</div>
											<p><%=comment.review%></p>
										</div>
										<%})%>

										<div class="reviews-submit">
											<h4>Thông tin đánh giá</h4>
											<div class="ratting">
												<i class="far fa-star"></i>
												<i class="far fa-star"></i>
												<i class="far fa-star"></i>
												<i class="far fa-star"></i>
												<i class="far fa-star"></i>
											</div>
											<form
												id="comment"
												class="row form"
												method="POST"
												action="/products/api/v1/comment/<%=data.slugName%>"
											>
												<%if (user) {%>
												<div class="col-sm-6">
													<input
														type="text"
														placeholder="Tên"
														value="<%=user.firstName%> <%=user.lastName%>"
														name="name"
													/>
												</div>
												<div class="col-sm-6">
													<input
														type="email"
														placeholder="Email"
														value="<%=user.email%>"
														name="email"
														readonly
													/>
												</div>
												<div class="col-sm-12">
													<textarea
														placeholder="Mô tả"
														name="review"
													></textarea>
												</div>
												<%}else{%>
												<div class="col-sm-6">
													<input type="text" placeholder="Tên" name="name" />
												</div>
												<div class="col-sm-6">
													<input
														type="email"
														placeholder="Email"
														name="email"
													/>
												</div>
												<div class="col-sm-12">
													<textarea
														placeholder="Mô tả"
														name="review"
													></textarea>
												</div>
												<%}%>
												<div class="col-sm-12 leave-comment">
													<button type="submit">Bình luận</button>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>

						<% }else{ %>
						<h1>Không tìm thấy sản phẩm</h1>
						<% } %>

						<!--- related Products -->
						<% if (relatedProducts && relatedProducts.length > 2) { %>
						<div class="product">
							<div class="section-header">
								<h3>Sản phẩm tương tự</h3>
							</div>

							<div
								class="row align-items-center product-slider product-slider-3"
							>
								<% relatedProducts.forEach((product, index) => { %>
								<div class="col-lg-8">
									<div
										class="product-item"
										data-aos="flip-right"
										data-aos-offset="100"
										data-aos-delay="<%=((index + 1)*50)%>"
										data-aos-duration="500"
									>
										<div class="product-title">
											<a href="/products/<%=product.slugName%>"
												><%= product.name %></a
											>
											<div class="ratting">
												<%Array(+product.rating).fill(0).forEach((num, index) =>
												{%>
												<i class="fa fa-star"></i>
												<%})%>
											</div>
										</div>
										<div class="product-image">
											<a href="/products/<%=product.slugName%>">
												<img
													src="<%=product.images[0] %>"
													alt="Product Image"
												/>
											</a>
											<div class="product-action">
												<a
													href="#"
													class="add-to-cart"
													value="<%=product.slugName%>"
												>
													<i class="fa fa-cart-plus"></i
												></a>
												<a
													href="#"
													class="add-to-like"
													value="<%=product.slugName%>"
												>
													<i class="fa fa-heart"></i>
												</a>
												<a href="/products/<%= product.slugName %>"
													><i class="fa fa-search"></i
												></a>
											</div>
										</div>
										<div class="product-price">
											<h3><span>$</span><%= product.price %></h3>
											<a
												class="btn buy-now"
												href="/checkout"
												value="<%=product.slugName%>"
												><i class="fa fa-shopping-cart"></i>Mua</a
											>
										</div>
									</div>
								</div>
								<% }) %>
							</div>
						</div>
						<% } else {%>
						<div class="product">
							<div class="section-header">
								<h3>Không tìm thấy sản phẩm tương tự</h3>
							</div>
						</div>
						<% } %>
					</div>

					<%- include('../partials/productSidebar', {col: 3, type: data.type,
					categories, ourBrands}); %>
				</div>
			</div>
		</div>
		<!-- Product Detail End -->

		<!-- Brand Start -->
		<div class="brand">
			<div class="container-fluid">
				<div class="brand-slider">
					<div class="brand-item"><img src="/img/brand-1.png" alt="" /></div>
					<div class="brand-item"><img src="/img/brand-2.png" alt="" /></div>
					<div class="brand-item"><img src="/img/brand-3.png" alt="" /></div>
					<div class="brand-item"><img src="/img/brand-4.png" alt="" /></div>
					<div class="brand-item"><img src="/img/brand-5.png" alt="" /></div>
					<div class="brand-item"><img src="/img/brand-6.png" alt="" /></div>
				</div>
			</div>
		</div>
		<!-- Brand End -->

		<%- include('../partials/footer'); %> <%- include('../partials/script'); %>
		<div
			id="api-msg"
			style="position: fixed; top: 75vh; left: 82vw; z-index: 1000"
		></div>
	</body>
</html>

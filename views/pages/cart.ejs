<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head'); %>
	</head>
	<body>
		<%- include('../partials/header', {query: ''}); %>

		<!-- Breadcrumb Start -->
		<div class="breadcrumb-wrap">
			<div class="container-fluid">
				<ul class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
					<li class="breadcrumb-item"><a href="/">Sản phẩm</a></li>
					<li class="breadcrumb-item active">Giỏ hàng</li>
				</ul>
			</div>
		</div>
		<!-- Breadcrumb End -->

		<!-- Cart Start -->
		<div class="cart-page">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-8">
						<div class="cart-page-inner">
							<div class="table-responsive">
								<table class="table table-bordered">
									<thead class="thead-dark">
										<%if (cart.items.length) {%>
										<tr>
											<th>Sản phẩm</th>
											<th>Giá tiền</th>
											<th>Số lượng</th>
											<th>Tổng tiền</th>
											<th>Xóa</th>
										</tr>
										<%}%>
									</thead>
									<tbody class="align-middle" id="cart">
										<%if (cart.items.length) { cart.items.forEach(item => {%>
										<tr>
											<td>
												<div class="img">
													<a href="/products/<%=item.slugName%>"
														><img src="<%=item.thumbnail%>" alt="Image"
													/></a>
													<p><%=item.name%></p>
												</div>
											</td>
											<td><%=item.price%></td>
											<td>
												<div class="qty">
													<%if (item.quantity <= 1) {%>
													<button
														class="btn-minus change-val"
														value="-1"
														name="<%=item.slugName%>"
														disabled
													>
														<i class="fa fa-minus"></i>
													</button>
													<%}else{%>
													<button
														class="btn-minus change-val"
														value="-1"
														name="<%=item.slugName%>"
													>
														<i class="fa fa-minus"></i>
													</button>
													<%}%>

													<input type="text" value="<%=item.quantity%>" />
													<button
														class="btn-plus change-val"
														value="1"
														name="<%=item.slugName%>"
													>
														<i class="fa fa-plus"></i>
													</button>
												</div>
											</td>
											<td id="<%=item.itemId%>">
												<%=item.total.toLocaleString('vi-VN')%>
											</td>
											<td class="trash">
												<button
													class="change-val"
													value="0"
													name="<%=item.slugName%>"
												>
													<i class="fa fa-trash"></i>
												</button>
											</td>
										</tr>
										<%})}else{%>
										<h3>Không có sản phẩm nào trong giỏ hàng!</h3>
										<h6 class="pt-3">
											<span
												><a class="text-success" href="/"
													>Tiếp tục mua sắm</a
												></span
											>
										</h6>
										<%}%>
									</tbody>
								</table>
							</div>
						</div>
					</div>
					<div class="col-lg-4">
						<div class="cart-page-inner">
							<div class="row">
								<div class="col-md-12">
									<div class="coupon">
										<input type="text" placeholder="Mã giảm giá" />
										<button>Sử dụng</button>
									</div>
								</div>
								<div class="col-md-12">
									<div class="cart-summary">
										<div class="cart-content">
											<h1>Thông tin tổng hợp</h1>
											<p>
												Tổng tiền của giỏ<span id="total-cost"
													><%=cart.totalCost.toLocaleString('vi-VN')%></span
												>
											</p>
											<%if (cart.items.length) {%>
											<p>Phí ship<span id="shipping-fee">25,000</span></p>
											<%}else{%>
											<p>Phí ship<span id="shipping-fee">0</span></p>
											<%}%> <%if (cart) {%>
											<p>
												Tổng số lượng<span id="total-quantity"
													><%=cart.totalQuantity%></span
												>
											</p>
											<%}else{%>
											<p>Tổng số lượng<span id="total-quantity">0</span></p>
											<%}%> <%if (cart.items.length) {%>
											<h2>
												Thành tiền<span id="total-payment"
													><%=(cart.totalCost + 25000).toLocaleString('vi-VN',
													)%></span
												>
											</h2>
											<%}else{%>
											<h2>Thành tiền<span>0</span></h2>
											<%}%>
										</div>
										<form class="cart-btn" method="GET" action="/checkout">
											<button>Cập nhật giỏ hàng</button>
											<button type="submit">Thanh toán</button>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Cart End -->

		<%- include('../partials/footer'); %> <%- include('../partials/script'); %>
		<div id="api-msg"></div>
	</body>
</html>

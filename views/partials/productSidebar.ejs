<!-- Side Bar Start -->
<div class="col-lg-<%=col%> sidebar">
	<div class="sidebar-widget category">
		<h2 class="title">Phân loại</h2>
		<nav class="navbar bg-light">
			<ul class="navbar-nav">
				<% categories.forEach(cate => { %>
				<li class="nav-item">
					<a class="nav-link" href="/products/resource/<%=cate.slugName%>"
						><i class="fa fa-<%=cate.icon%>"></i><%=cate.name%></a
					>
				</li>
				<%})%>
			</ul>
		</nav>
	</div>

	<div class="sidebar-widget brands">
		<h2 class="title">Thương hiệu</h2>
		<ul>
			<%const index = categories.filter(fil => fil.name === type)%>
			<%ourBrands.forEach((brand) => {%>
			<li>
				<a
					href="/products/resource/<%=index[0].slugName%>?producer=<%=brand.name%>"
					><%=brand.name%> </a
				><span>(<%=brand.count%>)</span>
			</li>
			<%})%>
		</ul>
	</div>

